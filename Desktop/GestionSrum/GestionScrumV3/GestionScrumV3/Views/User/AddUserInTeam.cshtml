@model GestionScrumV3.Models.AddUserInTeamViewModel

<div class="modal fade" id="addUserInTeam" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title" id="myModalLabel">Add User in the Team</h4>
            </div>
            @using (Html.BeginForm("AddUserInTeam", "User", FormMethod.Post, new { @class = "form-horizontal", @role = "form", @id = "AddUserInTeamForm" }))
            {
                <div class="modal-body">
                    <div class="form-group" style="padding-left: 25%;padding-right: 25%;">
                        @Html.LabelFor(model => model.User, new { @class = "control-label" })
                        @Html.TextBoxFor(model => model.User, new { @class="form-control"})
                        @Html.ValidationMessageFor(model => model.User)
                    </div>
                    @Html.HiddenFor(x=>x.TeamId)  
                    @Html.HiddenFor(x=>x.ProjectId)                
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                    <button type="submit"  class="btn btn-default">Save</button>
                </div>
            }
        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div><!-- /.modal -->

@section Scripts{
    <script type="text/javascript">
        $(function () {
            $('#addUserInTeam').modal('show');

            $('#addUserInTeam').on('hide.bs.modal', function (e) {
                window.location = "/Dashboard/Index"
            });

            $("#User").autocomplete({
                source: '/User/SearchUser',
                minLength: 2
            });
        });

    </script>
}