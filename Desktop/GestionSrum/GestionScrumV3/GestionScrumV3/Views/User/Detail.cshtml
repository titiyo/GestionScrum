@model GestionScrumV3.Models.UserViewModel

@{
    ViewBag.Title = "User Detail";
}

<div class="modal fade" id="removeUserInTeam" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title" id="myModalLabel" style="text-align:center;">User Detail</h4>
            </div>
            @using (Html.BeginForm("RemoveUserInTeam", "User", FormMethod.Post, new { @class = "form-horizontal", @role = "form", @id = "RemoveUserInTeam" }))
            {
                <div class="modal-body">
                    <fieldset>
                        <div style=" padding-left: 35%;">

                            <div class="form-group">
                                @Html.LabelFor(model => model.Login, new { @class = "control-label" }) : 
                                @Html.DisplayFor(model => model.Login, new { @class="form-control" })
                                @Html.HiddenFor(model => model.Login)
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.FirstName, new { @class = "control-label" }) : 
                                @Html.DisplayFor(model => model.FirstName, new { @class="form-control" })
                                @Html.HiddenFor(model => model.FirstName)
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.LastName, new { @class = "control-label" }) : 
                                @Html.DisplayFor(model => model.LastName, new { @class="form-control" })
                                @Html.HiddenFor(model => model.LastName)
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.Email, new { @class = "control-label" }) : 
                                @Html.DisplayFor(model => model.Email, new { @class="form-control" })
                                @Html.HiddenFor(model => model.Email)
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.PhoneNumber, new { @class = "control-label" }) : 
                                @Html.DisplayFor(model => model.PhoneNumber, new { @class="form-control" })
                                @Html.HiddenFor(model => model.PhoneNumber)
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.Function, new { @class = "control-label" }) : 
                                @Html.DisplayFor(model => model.Function.Name, new { @class="form-control" })
                                @Html.HiddenFor(model => model.Function.Name)
                            </div>  
                            @Html.HiddenFor(model=>model.TeamId)
                            @Html.HiddenFor(model=>model.ProjectId)
                        </div>
                    </fieldset>                
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                    <button type="submit"  class="btn btn-default">Remove to the team</button>
                </div>
            }
        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div><!-- /.modal -->

@section Scripts{
    <script type="text/javascript">
        $(function () {
            $('#removeUserInTeam').modal('show');

            $('#removeUserInTeam').on('hide.bs.modal', function (e) {
                window.location = "/Dashboard/Index"
            });
        });
    </script>
}